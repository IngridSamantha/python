padulta = 0
homem = 0
mulher = 0
total = 0
resposta = 's'
while resposta not in 'Nn':
    print('---' * 10)
    print('CADASTRE UMA PESSOA')
    idade = int(input('Idade: '))
    sexo = str(input('Sexo [M/F]: '))
    if idade > 18:
        padulta += 1
    if sexo.upper() == 'Mn':
        homem += 1
    if sexo.upper() == 'Ff' and idade < 20:
        mulher += 1
    else:
        print('Sexo Invalido')
    total += 1
    resposta = str(input('Quer continuar? '))
print(f'No total {padulta} pessoas adultas foram registradas. Foram um total de {homem} homens registrados, e {mulher} sÃ£o mulheres com menos de 20 anos registradas.')
